  "bin": "./bin/create-typescript",
  "main": "./lib/create-typescript.js",
  "typings": "./lib/create-typescript.d.ts",
  "files": [
    "bin/*",
    "lib/*",
    "template/*",
    "tsconfig.json"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint \"src/**/*.ts\" -p . -t stylish",
